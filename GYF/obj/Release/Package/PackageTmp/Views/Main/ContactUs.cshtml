
@{
    ViewBag.Title = "ContactUs";
    Layout = "~/Views/Shared/WebsiteLayout.cshtml";
}
<section class="page-title" style="background-image:url(../../Websitecss/images/background/2.1.jpg)">
    <div class="auto-container">
        <div class="inner-container clearfix">
            <div class="pull-left">
                <h1>Contact</h1>
            </div>
            <div class="pull-right">
                <ul class="bread-crumb clearfix">
                    <li><a href="/Main/Index">Home</a></li>
                    <li>Contact us</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!--End Page Title-->
<!-- Contact Page Section -->
<section class="contact-page-section">
    <div class="auto-container">
        <div class="row clearfix">
            <!-- Form Column -->
            <div class="form-column col-lg-6 col-md-12 col-sm-12">
                <div class="inner-column">
                    <!-- Sec Title -->
                    <div class="sec-title">
                        <div class="title">CONTACT WITH US</div>
                        <h2>Let’s meet with Us</h2>
                        <div class="seperater "></div>
                    </div>
                    <!-- Contact Form -->
                    <div class="contact-form">

                        <div class="form-group">
                            <input type="text" name="username" placeholder="Name" required="">
                        </div>
                        <div class="form-group">
                            <input type="email" name="email" placeholder="Email" required="">
                        </div>
                        <div class="form-group">
                            <input type="tel" name="phone" placeholder="Phone" required="">
                        </div>
                        <div class="form-group">
                            <input type="text" name="zip" placeholder="Area Zip Code" required="">
                        </div>
                        <div class="form-group">
                            <textarea name="message" placeholder="message"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="theme-btn submit-btn" type="submit" name="submit-form">Send Now</button>
                        </div>

                    </div>
                </div>
            </div>
            <!-- Map Column -->
            <div class="map-column col-lg-6 col-md-12 col-sm-12">

            </div>
        </div>
    </div>
</section>
<!-- End Contact Page Section -->
<!-- Contact Info Section -->
<section class="contact-info-section">
    <div class="auto-container">
        <div class="inner-container">
            <div class="row clearfix">
                <!-- Info Box -->
                <div class="info-box col-lg-6 col-md-6 col-sm-12">
                    <div class="box-inner">
                        <div class="icon fa fa-map-marker"></div>
                        <h3>Address</h3>
                        <div class="text">
                            No 30 4th Cross CMR Road HRBR 2 Block Kalyana Nagar Post Bangalore,<br> Banglore,
                            Karnataka, 560042
                        </div>
                    </div>
                </div>
                <!-- Info Box -->
             
                <!-- Info Box -->
                <div class="info-box col-lg-6 col-md-6 col-sm-12">
                    <div class="box-inner">
                        <div class="icon fa fa-envelope"></div>
                        <h3>E-Mail</h3>
                        <ul>
                            <li>support@capitalmaxretail.in</li>
                            <li>capitalmaxretailteam@gmail.com</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
