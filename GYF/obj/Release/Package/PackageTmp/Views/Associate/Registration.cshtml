@model GYF.Models.Home
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/AssociateLayout.cshtml";
}

<style>
    .errortext {
        border: 1px solid red !important;
    }
</style>
<div class="page-header page-header-light">
    <div class="page-header-content header-elements-md-inline">
        <div class="page-title d-flex">
            <h4><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-semibold">Income </span> - Registration</h4>
            <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
        </div>
    </div>
</div>
<div class="loader" id="divload" style="display: none;"></div>
@using (Html.BeginForm("Registration", "Associate", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="content">

        <div class="row">
            <div class="col-xl-12">
                <!-- Marketing campaigns -->
                <div class="card">
                    <div class="card-header header-elements-sm-inline">
                        <h6 class="card-title">Registration</h6>

                    </div>
                    <div class="card-header">
                        <p style="color: red">
                            @TempData["Registration"]
                        </p>
                    </div>
                    <div class="card-body">
                        <div class="row justify-content-center">
                            <div class="col-md-12 mx-auto">
                                <div class="row ">
                                    <div class="col-lg-4 col-md-4">
                                        <div class="form-group ">
                                            <label>Package Id <span style="color:red;font-size: 21px;">*</span></label>
                                            @Html.DropDownListFor(m => m.PackageId, new SelectList(ViewBag.Package, "Value", "Text"), new { @class = "form-control", @Placeholder = "Package Id", })
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4">
                                        <div class="form-group">
                                            <label>Sponsor Id <span style="color:red;font-size: 21px;">*</span></label>
                                            @Html.TextBoxFor(m => m.SponsorId, new { @class = "form-control", @Placeholder = "Sponsor Id", @onchange = "getsponsordetails(this);" })
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4">
                                        <div class="form-group ">
                                            <label> Sponsor Name</label>
                                            @Html.TextBoxFor(m => m.SponsorName, new { @class = "form-control", @Disabled = "true", @Placeholder = "Sponsor Name", })
                                        </div>
                                    </div>
                                    
                                </div>
                                <div class="row">
                                    <div class="col-lg-4 col-md-4">
                                        <div class="form-group ">
                                            <label> First Name <span style="color:red;font-size: 21px;">*</span></label>
                                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @Placeholder = "First Name" })
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4">
                                        <div class="form-group ">
                                            <label> Last Name</label>
                                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @Placeholder = "Last Name" })
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4">
                                        <div class="form-group ">
                                            <label> Email Id</label>
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @Placeholder = "Email Id" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4 col-md-4">
                                        <div class="form-group ">
                                            <label> Mobile No. <span style="color:red;font-size: 21px;">*</span></label>
                                            @Html.TextBoxFor(m => m.MobileNo, new { @class = "form-control", @Placeholder = "Mobile No", @Maxlength = "10", @onkeypress = "return isNumberKey(event);" })
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4">
                                        <div class="form-group ">
                                            <label> Pin Code</label>
                                            @Html.TextBoxFor(m => m.PinCode, new { @class = "form-control", @Placeholder = "Pin Code",@onchange = "return getstatecity();" })
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4">
                                        <div class="form-group ">
                                            <label> State</label>
                                            @Html.TextBoxFor(m => m.State, new { @class = "form-control", @Placeholder = "State", @Disabled = "disabled" })
                                        </div>
                                    </div>
                                    
                                </div>
                                <div class="row">
                                    <div class="col-lg-4 col-md-4">
                                        <div class="form-group ">
                                            <label> City</label>
                                            @Html.TextBoxFor(m => m.City, new { @class = "form-control", @Placeholder = "State", @Disabled = "disabled" })
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4">
                                        <div class="form-group ">
                                            <label> Password</label>
                                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @Placeholder = "Password" })
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4">
                                        <div class="form-group ">
                                            <label> Confirm Password</label>
                                            @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", @Placeholder = "Confirm Password", @onChange = "return ValidatePassword();" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                     <div class="col-lg-4 col-md-3">
                                        <div class="form-group ">
                                            <br />
                                            <input type="button" id="Confirm" onclick="return confirmregistration();" class="btn btn-primary" name="Confirm" value="Confirm" />
                                            <input type="button" id="Register" onclick="return saveregistration();" class="btn btn-success" style="display: none" name="Register" value="Register" />
                                        
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script>
    function getsponsordetails(obj) {
        $("#divload").css({ 'display': '' });
        $(".errortext").removeClass("errortext");
        $.ajax({
            url: '/Main/GetSponserDetails',
            type: 'GET',
            dataType: 'JSON',
            data: { 'ReferBy': $(obj).val() },
            success: function (response) {
                if (response.Result == "Yes") {
                    $("#divload").css({ 'display': 'none' });
                    $('#SponsorName').val(response.DisplayName);
                }
                else {
                    $("#divload").css({ 'display': 'none' });
                    $("#SponsorId").addClass('errortext');
                    $('#SponsorName').val('');
                    $('#SponsorId').val('');
                    $('#SponsorId').focus();
                    alert(response.Result);
                }
                $("#divload").css({ 'display': 'none' });
            }
        })
    }
    function isNumberKey(evt) {

        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }
    function ValidateForm() {
        $(".errortext").removeClass("errortext");
        if ($('#SponsorId').val() == '') {
            $("#SponsorId").addClass('errortext');
            $('#SponsorId').focus();
            return false;
        }
        if ($('#FirstName').val() == '') {
            $("#FirstName").addClass('errortext');
            $('#FirstName').focus();
            return false;
        }
        if ($('#MobileNo').val() == '') {
            $("#MobileNo").addClass('errortext');
            $('#MobileNo').focus();
            return false;
        }
    }
