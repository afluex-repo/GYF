@model CapitalMaxRetail.Models.Associate

@{
    ViewBag.Title = "TransferPin";
    Layout = "~/Views/Shared/AssociateLayout.cshtml";
}


@using (Html.BeginForm("TransferPin", "Associate", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{


    <div class="page-header page-header-light">
        <div class="page-header-content header-elements-md-inline">
            <div class="page-title d-flex">
                <h4><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-semibold">Pin Management </span> - Transfer Pin</h4>
                <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
            </div>
        </div>
    </div>
    <!-- /page header -->

    <div class="content">

        <div class="row">
            <div class="col-xl-12">
                <!-- Marketing campaigns -->
                <div class="card">
                    <div class="card-header header-elements-sm-inline">
                        <h6 class="card-title">Transfer Pin</h6>
                        <p style="color:red">
                            @TempData["TransferPin"]
                        </p>
                    </div>


                    <div class="row" style="margin-left:10px;">
                        <div class="col-md-12 col-sm-12 col-xs-12">

                            <div class="x_panel">

                                <div class="x_content">
                                    <div class="row">
                                        <div class="col-lg-12">

                                            <div class="row">
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        EPin
                                                        @Html.TextBoxFor(m => m.ePinNo, new { @class = "form-control", @readonly = "readonly" })
                                                    </div>
                                                </div>

                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        TopUp To<span style="color: red"> *</span>
                                                        @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @Placeholder = " TopUp To", @onchange = "getLoggerName();" })
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        Name
                                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @Placeholder = "Name", @readonly = "readonly" })
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">

                            <div class="card-footer text-left">

                                <input type="submit" class="btn btn-success" value="Transfer" name="btnTransfer" onclick="return validate();" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<script>

    $('#DOB').datepicker({
        dateFormat: 'dd/mm/yy',
        changeMonth: true,
        changeYear: true,
        yearRange: '1950:2020'
    });
    function getLoggerName() {
        var LoginId = $('#LoginId');
        $.ajax({
            url: '/Associate/getLoggerName',
            data: {
                'LoginId': $('#LoginId').val()
            },
            type: 'GET',
            dataType: 'JSON',
            success: function (data) {
                if (data.Name == null) {
                    alert('Invalid Login ID')
                    $("#LoginId").val('');
                    $("#Name").val('');
                    return;
                }
                $("#Name").val(data.Name);

            }
        });
    }
    function validate() {
        $(".errortext").removeClass('errortext');
        if ($("#LoginId").val() == '') {

            $("#LoginId").addClass('errortext');
            $("#LoginId").focus();
            return false;
        }
    }
</script>



