@model GYF.Models.Associate

@{
    ViewBag.Title = "UploadKYC";
    Layout = "~/Views/Shared/AssociateLayout.cshtml";
}
@using (Html.BeginForm("UploadKYC", "Associate", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{

    <div class="page-header page-header-light">
        <div class="page-header-content header-elements-md-inline">
            <div class="page-title d-flex">
                <h4><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-semibold">Profile </span> - Upload KYC</h4>
                <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
            </div>
        </div>
    </div>
    <!-- /page header -->

    <div class="content">

        <div class="row">
            <div class="col-xl-12">
                <!-- Marketing campaigns -->
                <div class="card">
                    <div class="card-header header-elements-sm-inline">
                        <h6 class="card-title">Upload KYC</h6>
                        <p style="color:red">
                            @TempData["DocumentUpload"]
                        </p>
                    </div>


                    <div class="row" style="margin-left:10px;">
                        <div class="col-md-12 col-sm-12 col-xs-12">

                            <div class="x_panel">

                                <div class="x_content">
                                    <div class="row">
                                        <div class="col-12 col-md-4 col-lg-4">
                                            @if (Model.AdharStatus == "Status : Approved")
                                            {
                                                <label>Adhar Number</label>
                                                @Html.TextBoxFor(m => m.AdharNumber, new { @class = "form-control", @onclick = "return isNumberOrDecimal(event);", @maxlength = "12", @minlength = "12", @readonly = "readonly" })
                                                @Html.DisplayFor(m => m.AdharStatus, new { @class = "form-control" })
                                                <br />
                                                <br />

                                                <br />
                                                if (Model.AdharImage == "")
                                                {

                                                    <img src="~/Websitecss/images/aadhar_new.png" height="120" width="180" />
                                                }
                                                else
                                                {

                                                }
                                                <img src="@Url.Content(Model.AdharImage)" height="120" width="180" />
                                                <br />
                                            }
                                            else
                                            {
                                                <label>Adhar Number <span style="color: red">*</span></label>
                                                @Html.TextBoxFor(m => m.AdharNumber, new { @class = "form-control", @onclick = "return isNumberOrDecimal(event);", @maxlength = "12", @minlength = "12" })
                                                @Html.DisplayFor(m => m.AdharStatus, new { @class = "form-control" })
                                                <br />
                                                <br />
                                                <input type="file" name="postedFile" />
                                                <br />
                                                if (Model.AdharImage == "" || Model.AdharImage ==null)
                                                {

                                                    <img src="~/Websitecss/images/aadhar_new.png" height="120" width="180" />
                                                }
                                                else
                                                {
                                                    <img src="@Url.Content(Model.AdharImage)" height="120" width="180" />
                                                }
                                                
                                                <br />
                                                    <input style="margin:10px;" onclick="return confirmAdhar();"  type="submit" id="btnUpdateAdhar" class="btn btn-success pull-left" name="btnUpdateAdhar" value="Update Adhar" />
                                                    <br />
                                            }
                                        </div>
                                        <div class="col-12 col-md-4 col-lg-4">
                                            @if (Model.PanStatus == "Status : Approved")
                                            {
                                                <label>Adhar Number </label>
                                                @Html.TextBoxFor(m => m.PanNumber, new { @class = "form-control", @onclick = "return isNumberOrDecimal(event);", @maxlength = "12", @minlength = "12", @readonly = "readonly" })
                                                @Html.DisplayFor(m => m.PanStatus, new { @class = "form-control" })
                                                <br />
                                                <br />

                                                <br />
                                                if (Model.PanImage == "/images/noimage.jpg")
                                                {
                                                    <img src="~/Websitecss/images/pancard_new.png" height="120" width="180" />
                                                }
                                                else
                                                {
                                                    <img src="@Url.Content(Model.PanImage)" height="120" width="180" />
                                                }

                                                <br />
                                            }
                                            else
                                            {
                                                <label>Pan Number <span style="color: red">*</span></label>
                                                @Html.TextBoxFor(m => m.PanNumber, new { @class = "form-control", @minlength = "10" })
                                                @Html.DisplayFor(m => m.PanStatus, new { @class = "form-control" })
                                                <br />
                                                <br />
                                                <input type="file" name="postedFile" />
                                                <br />
                                                if (Model.PanImage == "" || Model.PanImage ==null)
                                                {
                                                    <img src="~/Websitecss/images/pancard_new.png" height="120" width="180" />
                                                }
                                                else
                                                {
                                                    <img src="@Url.Content(Model.PanImage)" height="120" width="180" />
                                                }

                                              <br />
                                                <input type="submit" style="margin:10px;" onclick="return confirmPan();"  id="btnUpdatePan" class="btn btn-success pull-left" name="btnUpdatePan" value="Update Pan" />
                                                <br />
                                            }
                                        </div>
                                        <div class="col-12 col-md-4 col-lg-4">
                                            @if (Model.DocumentStatus == "Status : Approved")
                                            {
                                                <label>Document Number </label>
                                                @Html.TextBoxFor(m => m.DocumentNumber, new { @class = "form-control", @onclick = "return isNumberOrDecimal(event);", @maxlength = "12", @minlength = "12", @readonly = "readonly" })
                                                @Html.DisplayFor(m => m.DocumentStatus, new { @class = "form-control" })
                                                <br />
                                                <br />

                                                <br />
                                                if (Model.DocumentImage == "" || Model.DocumentImage == null)
                                                {
                                                    <img src="~/Websitecss/images/documents_new.png" height="120" width="180" />
                                                }
                                                else
                                                {
                                                    <img src="@Url.Content(Model.DocumentImage)" height="120" width="180" />
                                                }

                                                <br />

                                            }
                                            else
                                            {
                                                <label>Document Number</label>
                                                @Html.TextBoxFor(m => m.DocumentNumber, new { @class = "form-control" })
                                                @Html.DisplayFor(m => m.DocumentStatus, new { @class = "form-control" })
                                                <br />
                                                <br />
                                                <input type="file" name="postedFile" />
                                                <br />
                                                if (Model.DocumentImage == "" || Model.DocumentImage==null)
                                                {

                                                    <img src="~/Websitecss/images/documents_new.png" height="120" width="180" />
                                                }
                                                else
                                                {
                                                    <img src="@Url.Content(Model.DocumentImage)" height="120" width="180" />
                                                }
                                              <br />
                                                <input type="submit" style="margin:10px;" id="btnUpdateDoc" class="btn btn-success mr-1btn" name="btnUpdateDoc" value="Update Document" />
                                                <br />
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script>
    function isNumberOrDecimal(evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }
    function confirmAdhar() {
        $(".errortext").removeClass("errortext");
        if ($('#AdharNumber').val() == '') {
            $("#AdharNumber").addClass('errortext');
            $('#AdharNumber').focus();
            return false;
        }
    }
    function confirmPan() {
        $(".errortext").removeClass("errortext");
        if ($('#PanNumber').val() == '') {
            $("#PanNumber").addClass('errortext');
            $('#PanNumber').focus();
            return false;
        }
    }
</script>

