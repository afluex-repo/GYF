@model CapitalMaxRetail.Models.Associate

@{
    ViewBag.Title = "UpdateProfile";
    Layout = "~/Views/Shared/AssociateLayout.cshtml";
}

@using (Html.BeginForm("UpdateProfile", "Associate", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="page-header page-header-light">
        <div class="page-header-content header-elements-md-inline">
            <div class="page-title d-flex">
                <h4><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-semibold">Profile </span> - Update Profile</h4>
                <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
            </div>
        </div>
    </div>
    <!-- /page header -->

    <div class="content">

        <div class="row">
            <div class="col-xl-12">
                <!-- Marketing campaigns -->
                <div class="card">
                    <div class="card-header header-elements-sm-inline">
                        <h6 class="card-title">Update Profile</h6>
                        <p style="color:red">
                            @TempData["UpdateProfile"]
                        </p>
                    </div>


                    <div class="row" style="margin-left:10px;">
                        <div class="col-md-12 col-sm-12 col-xs-12">

                            <div class="x_panel">

                                <div class="x_content">
                                    <div class="row">
                                        <div class="col-lg-12">

                                            <div class="row">
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        Date of Birth <span style="color: red">*</span>
                                                        @Html.TextBoxFor(m => m.DOB, new { @class = "form-control", @readonly = "readonly" })
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        Profile Pic
                                                        <input type="file" name="Image" class="bg-default form-control" id="Image" />
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        Address <span style="color: red">*</span>
                                                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @Placeholder = "Address" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">

                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        Mobile <span style="color: red">*</span>
                                                        @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", @Placeholder = "Mobile", @onkeypress = "return isNumberKey(event);", @maxlength = "10", @minlength = "10" })
                                                    </div>
                                                </div>

                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        Pincode<span style="color: red">*</span>
                                                        @Html.TextBoxFor(m => m.PinCode, new { @class = "form-control", @Placeholder = "PinCode", @onkeypress = "return isNumberKey(event);", @maxlength = "6", @onchange = "return GetstateCity();" })
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        City
                                                        @Html.TextBoxFor(m => m.City, new { @class = "form-control", @Placeholder = "City", @readonly = "readonly" })
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        State
                                                        @Html.TextBoxFor(m => m.State, new { @class = "form-control", @Placeholder = "State", @readonly = "readonly" })
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        Email
                                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @Placeholder = "Email" })
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="row">
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        NomineName<span style="color: red">*</span>
                                                        @Html.TextBoxFor(m => m.NomineName, new { @class = "form-control", @Placeholder = "Nominee Name" })
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        Nominee Relation<span style="color: red">*</span>
                                                        @Html.TextBoxFor(m => m.NomineRealation, new { @class = "form-control", @Placeholder = "Nominee Relation" })

                                                    </div>
                                                </div>

                                            </div>

                                            <div class="row">

                                                <input type="submit" class="btn btn-success" value="Update" name="btnUpdateProfile" onclick="return validate();" />
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<script>

    function validate() {
        $(".errortext").removeClass('errortext');
        if ($("#DOB").val() == '') {
            $("#DOB").addClass('errortext');
            $("#DOB").focus();
            return false;
        }
        if ($("#Address").val() == '') {
            $("#Address").addClass('errortext');
            $("#Address").focus();
            return false;
        }
        var mobile = $('#Mobile').val();
        mobile = mobile.replace(/[^0-9]/g, '');
        if (mobile.length != 10) {
            alert('Mobile must be 10 digits.');
            $('#Mobile').val('');
            $('#Mobile').focus();
            return false;
        }
        if ($("#Mobile").val() == '') {

           
            $("#Mobile").addClass('errortext');
            $("#Mobile").focus();
            return false;
        }
        if ($("#PinCode").val() == '') {
            $("#PinCode").addClass('errortext');
            $("#PinCode").focus();
            return false;
        }
        if ($("#NomineName").val() == '') {
            $("#NomineName").addClass('errortext');
            $("#NomineName").focus();
            return false;
        }
        if ($("#NomineRealation").val() == '') {
            $("#NomineRealation").addClass('errortext');
            $("#NomineRealation").focus();
            return false;
        }
    }
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }


    $('#DOB').datepicker({
        dateFormat: 'dd/mm/yy',
        changeMonth: true,
        changeYear: true,
        yearRange: '1950:2020'
    });

    function GetstateCity() {

        var value = $('#PinCode').val();

        $.ajax({
            url: '/Associate/GetStateCityByPincode', type: 'post', dataType: 'json',
            data: { 'PinCode': value }, success: function (data) {

                if (data.Result == "Yes") {
                    $('#State').val(data.State);
                    $('#City').val(data.City);

                }
                else {
                    alert("Invalid Pincode");
                    $('#PinCode').val('');
                    $('#State').val('');
                    $('#City').val('');
                }
            }

        });

    }


</script>


