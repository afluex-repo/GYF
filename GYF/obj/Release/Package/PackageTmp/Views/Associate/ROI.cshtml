@model GYF.Models.Associate

@{
    ViewBag.Title = "ROI";
    Layout = "~/Views/Shared/AssociateLayout.cshtml";
}

@using (Html.BeginForm("ROi", "Associate", FormMethod.Post, new { id = "form" }))
{

    <!-- Page header -->
    <div class="page-header page-header-light">
        <div class="page-header-content header-elements-md-inline">
            <div class="page-title d-flex">
                <h4><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-semibold">Income Reports </span> - ROI Details</h4>
                <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
            </div>
        </div>
    </div>
    <!-- /page header -->

    <div class="content">

        <div class="row">
            <div class="col-xl-12">
                <!-- Marketing campaigns -->
                <div class="card">
                    <div class="card-header header-elements-sm-inline">
                        <h6 class="card-title">ROI Details</h6>

                    </div>
                    <div class="card-header">
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered w-100 mb-0" id="example25">
                            <thead>
                                <tr>

                                    @*<th>Sr No.</th>*@
                                    @*<th>Login ID</th>*@
                                    <th>Date</th>
                                    <th>No of Days</th>
                                    <th>ROI</th>
                                </tr>

                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    if (Model.ListROI != null)
                                    {
                                        int i = 1;
                                        foreach (var Item in Model.ListROI)
                                        {
                                            <tr class="text-left">

                                                @*<td>@i</td>*@
                                                <td>@Item.ROIDate</td>
                                                @*<td>@Item.LoginId</td>*@
                                                <td>@Item.NoofDays</td>
                                                <td>@Item.ROI</td>
                                            </tr>
                                            i++;
                                        }

                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

