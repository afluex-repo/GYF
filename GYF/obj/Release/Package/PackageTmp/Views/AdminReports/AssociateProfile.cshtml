@model CapitalMaxRetail.Models.AdminReports

@{
    ViewBag.Title = "AssociateProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("AssociateProfile", "AdminReports", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{


    <!-- Page header -->
    <div class="page-header page-header-light">
        <div class="page-header-content header-elements-md-inline">
            <div class="page-title d-flex">
                <h4><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-semibold">Admin Reports </span> - Update Associate Profile</h4>
                <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
            </div>
        </div>
    </div>
    <!-- /page header -->

    <div class="content">

        <div class="row">
            <div class="col-xl-12">
                <!-- Marketing campaigns -->
                <div class="card">
                    <div class="card-header header-elements-sm-inline">
                        <h6 class="card-title">Associate Profile</h6>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">

                                <div class="card-header">

                                    <p style="color: red">
                                        @TempData["AssociateProfile"]
                                    </p>
                                </div>


                                <div class="row" style="margin-left:10px;">
                                    <div class="col-md-12 col-sm-12 col-xs-12">

                                        <div class="x_panel">

                                            <div class="x_content">
                                                <div class="row">
                                                    <div class="col-lg-12">

                                                        <div class="row">
                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    Date of Birth <span style="color: red">*</span>
                                                                    @Html.TextBoxFor(m => m.DOB, new { @class = "form-control", @readonly = "readonly" })
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    Profile Picture
                                                                    <input type="file" name="Image" class="bg-default form-control" id="Image" />
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    First Name<span style="color: red">*</span>
                                                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @Placeholder = "First Name" })
                                                                    @Html.HiddenFor(m => m.Fk_UserId)


                                                                </div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    Last Name
                                                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @Placeholder = "Name" })
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    Mobile<span style="color: red">*</span>
                                                                    @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", @Placeholder = "Mobile", @onkeypress = "return isNumberKey(event);", @maxlength = "10", @minlength = "10" })
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    Email
                                                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @Placeholder = "Email" })
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    Address<span style="color: red">*</span>
                                                                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @Placeholder = "Address" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    Pincode<span style="color: red">*</span>
                                                                    @Html.TextBoxFor(m => m.PinCode, new { @class = "form-control", @Placeholder = "PinCode", @onkeypress = "return isNumberKey(event);", @maxlength = "6", @minlength = "6",@onchange= "return GetstateCity()" })
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    State Name
                                                                    @Html.TextBoxFor(m => m.State, new { @class = "form-control", @Placeholder = "State Name", @readonly = "readonly" })
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    CityName
                                                                    @Html.TextBoxFor(m => m.City, new { @class = "form-control", @Placeholder = "City Name", @readonly = "readonly" })
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="card-header">
                                                            <div class="row ">

                                                                <div class="col-auto">
                                                                    <h4 class="mt-0 mb-1">Bank Details</h4>

                                                                </div>

                                                            </div>
                                                        </div>
                                                        <div class="row">

                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    Bank Name
                                                                    @Html.TextBoxFor(m => m.BankName, new { @class = "form-control", @Placeholder = "Bank Name" })

                                                                </div>
                                                            </div><div class="col-md-4">
                                                                <div class="form-group">
                                                                    Branch
                                                                    @Html.TextBoxFor(m => m.BankBranch, new { @class = "form-control" })
                                                                </div>
                                                            </div>
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    Bank Holder Name
                                                                    @Html.TextBoxFor(m => m.BankHolderName, new { @class = "form-control" })
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    Bank A/C No.
                                                                    @Html.TextBoxFor(m => m.AccountNo, new { @class = "form-control" })
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    IFSC
                                                                    @Html.TextBoxFor(m => m.IFSC, new { @class = "form-control" })
                                                                </div>
                                                            </div>

                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    PAYTM No.
                                                                    @Html.TextBoxFor(m => m.PAYTMNo, new { @class = "form-control", @onkeypress = "return isNumberKey(event);", @maxlength = "10", @minlength = "10" })
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    PhonePe
                                                                    @Html.TextBoxFor(m => m.Phonepay, new { @class = "form-control", @onkeypress = "return isNumberKey(event);", @maxlength = "10", @minlength = "10" })
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    Google Pay
                                                                    @Html.TextBoxFor(m => m.GooglePay, new { @class = "form-control", @onkeypress = "return isNumberKey(event);", @maxlength = "10", @minlength = "10" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="card-header">
                                                            <div class="row ">

                                                                <div class="col-auto">
                                                                    <h4 class="mt-0 mb-1">Nominee Details</h4>

                                                                </div>

                                                            </div>
                                                        </div>
                                                        <div class="row">

                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    Nominee Name
                                                                    @Html.TextBoxFor(m => m.NomineName, new { @class = "form-control", @Placeholder = "Nomine Name" })

                                                                </div>
                                                            </div>
                                                            <div class="col-md-8">
                                                                <div class="form-group">
                                                                    Nomine Relation
                                                                    @Html.TextBoxFor(m => m.NomineRealation, new { @class = "form-control", @Placeholder = "Nomine Relation" })
                                                                </div>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4">

                                        <div class="card-footer text-left">

                                            <input type="submit" class="btn btn-success" value="Update" name="btnUpdateProfile" onclick="return validate();" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<script>

    $('#DOB').datepicker({
        dateFormat: 'dd/mm/yy',
        changeMonth: true,
        changeYear: true,
        yearRange: '1950:2020'
    });

    function GetstateCity() {

        var value = $('#PinCode').val();

        $.ajax({
            url: '/AdminReports/GetStateCityByPincode', type: 'post', dataType: 'json',
            data: { 'PinCode': value }, success: function (data) {

                if (data.Result == "Yes") {
                    $('#State').val(data.State);
                    $('#City').val(data.City);

                }
                else {
                    alert("Invalid Pincode");
                    $('#PinCode').val('');
                    $('#State').val('');
                    $('#City').val('');
                }
            }

        });

    }
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }

    function validate() {
        $(".errortext").removeClass('errortext');
        if ($("#DOB").val() == '') {
            $("#DOB").addClass('errortext');
            $("#DOB").focus();
            return false;
        }
        if ($("#FirstName").val() == '') {
            $("#FirstName").addClass('errortext');
            $("#FirstName").focus();
            return false;
        }
        if ($("#Mobile").val() == '') {

            var mobile = $('#Mobile').val();
            if (mobile.length != 10) {
                alert('Mobile should have 10 digits');
                return false;
            }
            $("#Mobile").addClass('errortext');
            $("#Mobile").focus();
            return false;
        }
        if ($("#Address").val() == '') {
            $("#Address").addClass('errortext');
            $("#Address").focus();
            return false;
        }
        if ($("#PinCode").val() == '') {
            $("#PinCode").addClass('errortext');
            $("#PinCode").focus();
            return false;
        }
    }
</script>



