@model CapitalMaxRetail.Models.AdminReports

@{
    ViewBag.Title = "Support";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Support", "AdminReports", FormMethod.Post, new { @id = "form3", enctype = "multipart/form-data" }))
{
      <!-- Page header -->
    <div class="page-header page-header-light">
        <div class="page-header-content header-elements-md-inline">
            <div class="page-title d-flex">
                <h4><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-semibold">Support </span></h4>
                <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
            </div>
        </div>
    </div>
    <!-- /page header -->

    <div class="content">

        <div class="row">
            <div class="col-xl-12">
                <!-- Marketing campaigns -->
                <div class="card">
                    <div class="card-header header-elements-sm-inline">
                        <h6 class="card-title">Support</h6>
                        <p style="color:red">
                            @TempData["Support"]
                        </p>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-bordered w-100 mb-0" id="example24">
                            <thead>
                                <tr>

                                    <th>Sr No.</th>
                                    <th>Login Id</th>
                                    <th>Name</th>
                                    <th>Subject</th>
                                    <th>Msg</th>
                                    <th>Status</th>

                                </tr>

                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    if (Model.lstReplySupport != null)
                                    {
                                        int i = 1;
                                        foreach (var Item in Model.lstReplySupport)
                                        {
                                            <tr class="text-left">

                                                <td>
                                                    @i
                                                    @Html.HiddenFor(m => m.PK_SupportId)
                                                </td>
                                                <td>@Item.LoginId</td>
                                                <td>@Item.Name</td>
                                                <td>@Item.Subject</td>
                                                <td>@Item.Msg</td>
                                                @if (Item.Status == "1")
                                                {
                                                    <td>Replied</td>
                                                }
                                                else
                                                {

                                                    <td>
                                                        <a href="/AdminReports/SupportReply?SupportTokenId=@Item.SupportTokenId&Subject=@Item.Subject&Msg=@Item.Msg&FK_UserId=@Item.Fk_UserId&LoginId=@Item.LoginId&Name=@Item.Name" class="btn btn-sm btn-primary">Reply</a>

                                                    </td>
                                                }
                                            </tr>
                                            i++;
                                        }

                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}