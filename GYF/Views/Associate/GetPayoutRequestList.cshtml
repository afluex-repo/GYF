@model GYF.Models.AdminReports
@{
    ViewBag.Title = "GetPayoutRequestList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("GetPayoutRequestList", "AdminReports", FormMethod.Post, new { id = "form" }))
{
    <!-- Page header -->
    <div class="page-header page-header-light">
        <div class="page-header-content header-elements-md-inline">
            <div class="page-title d-flex">
                <h4><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-semibold"> </span> - Get Payout Request List</h4>
                <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
            </div>
        </div>
    </div>
    <!-- /page header -->

    <div class="content">

        <div class="row">
            <div class="col-xl-12">
                <!-- Marketing campaigns -->
                <div class="card">
                    <div class="card-header header-elements-sm-inline">
                        <h6 class="card-title">Get Payout Request List</h6>

                    </div>
                    <div class="card-header">

                        @*<p style="color: red">
                            @TempData["LevelIncome"]
                        </p>*@
                    </div>
                    <div class="card-body">
                        <div class="row justify-content-center">
                            <div class="col-md-12 mx-auto">
                                <div class="row ">
                                    <div class="col-lg-3 col-md-3">
                                        <div class="form-group">
                                            <label>
                                                Login Id
                                            </label>
                                            @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @Placeholder = "Login Id" })

                                        </div>
                                      </div>
                                    <div class="col-lg-3 col-md-3">
                                        <div class="form-group ">
                                            <input type="submit" class="btn btn-info" name="btnDetails" id="btnDetails" style="margin-top:25px" value="Get Details" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered w-100 mb-0" id="example24">
                            <thead>
                                <tr>
                                    <th>Sr No.</th>
                                    <th>Amount</th>
                                    <th>Requested Date</th>
                                    <th>Status</th>
                                    <th>LoginId</th>
                                    <th>Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    if (Model.GetPayoutRequestList != null)
                                    {
                                        int i = 1;
                                        foreach (var Item in Model.GetPayoutRequestList)
                                        {
                                            <tr class="text-left">
                                                <td> @i</td>
                                                <td>@Item.Amount</td>
                                                <td>@Item.RequestedDate</td>
                                                <td>@Item.Status</td>
                                                <td>@Item.LoginId</td>
                                                <td>@Item.Name</td>
                                            </tr>
                                            i++;
                                        }

                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

