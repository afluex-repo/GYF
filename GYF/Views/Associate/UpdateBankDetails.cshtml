@model GYF.Models.Associate

@{
    ViewBag.Title = "UpdateBankDetails";
    Layout = "~/Views/Shared/AssociateLayout.cshtml";
}
@using (Html.BeginForm("UpdateBankDetails", "Associate", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="page-header page-header-light">
        <div class="page-header-content header-elements-md-inline">
            <div class="page-title d-flex">
                <h4><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-semibold">Profile </span> - Update Bank Details</h4>
                <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
            </div>
        </div>
    </div>
    <!-- /page header -->

    <div class="content">

        <div class="row">
            <div class="col-xl-12">
                <!-- Marketing campaigns -->
                <div class="card">
                    <div class="card-header header-elements-sm-inline">
                        <h6 class="card-title">Update Bank Details</h6>
                        <p style="color:red">
                            @TempData["UpdateBankDetails"]
                        </p>
                    </div>



                    <div class="row" style="margin-left:10px;">
                        <div class="col-md-12 col-sm-12 col-xs-12">

                            <div class="x_panel">

                                <div class="x_content">
                                    <div class="row">
                                        <div class="col-lg-12">

                                            <div class="row">
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        IFSC Code <span style="color: red">*</span>
                                                        @Html.TextBoxFor(m => m.IFSC, new { @class = "form-control", @placeholder = "IFSC Code" })
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        Bank Name<span style="color: red">*</span>
                                                        @Html.TextBoxFor(m => m.BankName, new { @class = "form-control", @placeholder = "Bank Name" })
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        Branch Name<span style="color: red">*</span>
                                                        @Html.TextBoxFor(m => m.BankBranch, new { @class = "form-control", @placeholder = "Branch Name" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        Bank Holder Name <span style="color: red">*</span>
                                                        @Html.TextBoxFor(m => m.BankHolderName, new { @class = "form-control", @placeholder = "Bank Holder Name" })
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        Account Number<span style="color: red">*</span>
                                                        @Html.TextBoxFor(m => m.AccountNo, new { @class = "form-control", @placeholder = "Account Number", @onkeypress = "return isNumberKey(event);" })
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        PAYTM No
                                                        @Html.TextBoxFor(m => m.PAYTMNo, new { @class = "form-control", @placeholder = "PAYTM No.", @onkeypress = "return isNumberKey(event);", @maxlength = "10" })
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        Phonepe No.
                                                        @Html.TextBoxFor(m => m.Phonepay, new { @class = "form-control", @placeholder = "Phonepe No.", @onkeypress = "return isNumberKey(event);", @maxlength = "10" })
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        Google Pay
                                                        @Html.TextBoxFor(m => m.GooglePay, new { @class = "form-control", @placeholder = "Google Pay", @onkeypress = "return isNumberKey(event);", @maxlength = "10" })
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="card-footer text-left">

                                                <input type="submit" class="btn btn-success" value="Update" name="btnBankDetails" onclick="return validate();" />
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<script>

    function validate() {
        $(".errortext").removeClass('errortext');
        if ($("#IFSC").val() == '') {
            $("#IFSC").addClass('errortext');
            $("#IFSC").focus();
            return false;
        }
        if ($("#BankName").val() == '') {
            $("#BankName").addClass('errortext');
            $("#BankName").focus();
            return false;
        }
        if ($("#BankBranch").val() == '') {
            $("#BankBranch").addClass('errortext');
            $("#BankBranch").focus();
            return false;
        }
        if ($("#BankHolderName").val() == '') {
            $("#BankHolderName").addClass('errortext');
            $("#BankHolderName").focus();
            return false;
        }
        if ($("#AccountNo").val() == '') {
            $("#AccountNo").addClass('errortext');
            $("#AccountNo").focus();
            return false;
        }
    }
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }


</script>


