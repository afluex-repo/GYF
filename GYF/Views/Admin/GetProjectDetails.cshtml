@model GYF.Models.Admin

@{
    ViewBag.Title = "GetProjectDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("GetProjectDetails", "Admin", FormMethod.Post, new { id = "form" }))
{

    <!-- Page header -->
    <div class="page-header page-header-light">
        <div class="page-header-content header-elements-md-inline">
            <div class="page-title d-flex">
                <h4><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-semibold">Admin </span> - Project Details</h4>
                <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
            </div>
        </div>
    </div>
    <!-- /page header -->

    <div class="content">

        <div class="row">
            <div class="col-xl-12">
                <!-- Marketing campaigns -->
                <div class="card">
                    <div class="card-header header-elements-sm-inline">
                        <h6 class="card-title">Project Details</h6>

                    </div>
                    <div class="row">
                        <div class="col-sm-10">
                        </div>
                        <div class="col-sm-2">
                            <a href="/Admin/Project" class="btn btn-primary" style="border-radius:100px;">Add New</a>
                        </div>
                    </div>
                    <div class="card-header">

                        <p style="color: red">
                            @TempData["Project"]
                        </p>
                    </div>
                    
                    <div class="card-body">
                        <div class="row justify-content-center">
                            <div class="col-md-12 mx-auto">
                                <div class="row ">
                                    <div class="col-lg-3 col-md-3">
                                        <div class="form-group ">
                                            <label> Payout No</label>
                                            @Html.TextBoxFor(m => m.OfficeProjectNo, new { @class = "form-control", @Placeholder = "Office/Project No" })
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-3">
                                        <div class="form-group ">
                                            <input type="submit" class="btn btn-info" name="btnDetails" id="btnDetails" style="margin-top:25px" value="Get Details" />
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </div>

                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered w-100 mb-0" id="example25">
                            <thead>
                                <tr>

                                    <th>Sr No.</th>
                                    <th>Office/Project No</th>
                                    <th>Office/Project</th>
                                    <th>Image</th>
                                    <th>Action</th>

                                </tr>

                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    if (Model.lstOfficeProject != null)
                                    {
                                        int i = 1;
                                        foreach (var Item in Model.lstOfficeProject)
                                        {
                                            <tr class="text-left">

                                                <td>@i</td>
                                                <td>@Item.OfficeProjectNo</td>
                                                <td>@Item.OfficeProject</td>
                                                <td><img src="@Item.Image" width="100" /></td>
                                                <td>
                                                    <a href="/Admin/Project?Id=@Item.ProjectId" class="btn btn-sm btn-primary">Edit</a>
                                                    <a href="/Admin/ProjectDelete?Id=@Item.ProjectId" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
                                                </td>
                                            </tr>
                                            i++;
                                        }

                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
