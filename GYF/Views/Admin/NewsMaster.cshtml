@model GYF.Models.Admin

@{
    ViewBag.Title = "NewsMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("NewsMaster", "Admin", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
     <!-- Page header -->
    <div class="page-header page-header-light">
        <div class="page-header-content header-elements-md-inline">
            <div class="page-title d-flex">
                <h4><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-semibold">News Master</span></h4>
                <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
            </div>
        </div>
    </div>
    <!-- /page header -->

    <div class="content">

        <div class="row">
            <div class="col-xl-12">
                <!-- Marketing campaigns -->
                <div class="card">
                    <div class="card-header header-elements-sm-inline">
                        <h6 class="card-title">News Master</h6>

                    </div>
                    <div class="card-header">

                        <p style="color: red">
                            @TempData["NewsMaster"]
                        </p>
                    </div>
                    <div class="card-body">
                        <div class="row justify-content-center">
                            <div class="col-md-12 mx-auto">
                                <div class="row ">

                                    <div class="col-lg-12 col-md-12">
                                        <div class="form-group ">
                                            <label> Title<span style="color: red"> *</span></label>
                                            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @placeholder = "Title" })

                                        </div>
                                    </div>
                                   
                                </div>
                                <div class="row ">


                                    <div class="col-lg-12 col-md-12">
                                        <div class="form-group ">
                                            <label>Description <span style="color: red"> *</span></label>
                                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @Placeholder = "Description", @Rows = "7", @cols = "20" })
                                            @Html.HiddenFor(m => m.PK_NewsID)

                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                    <div class="card-footer text-left">
                        @if (Model.PK_NewsID == null)
                        {
                            <input type="submit" class="btn btn-success" value="Save" name="btnSave" onclick="return validate();" />

                        }
                        else
                        {
                            <input type="submit" class="btn btn-success" value="Update" name="btnUpdate" onclick="return validate();" />

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>


}

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<script>

    function validate() {
        $(".errortext").removeClass('errortext');

        if ($("#Title").val() == '') {
            $("#Title").addClass('errortext');
            $("#Title").focus();
            return false;
        }
        if ($("#Description").val() == '') {
            $("#Description").addClass('errortext');
            $("#Description").focus();
            return false;
        }
    }
</script>




